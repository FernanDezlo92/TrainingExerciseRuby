<h1><%= @organization.name %></h1>
</br>
<div>
    <h2><%= t(".listing_season") %></h2>
</br>
    <%= link_to 'List of Seasons', organization_season_index_path(@organization.id), class: 'btn btn-sm btn-primary' %>
</br>
</br>
</div>
<h2><%= t(".active_seasons") %></h2>
    <table class="table table-hover">
    <thead>
        <tr>
        <th scope="col">#</th>
        <th scope="col"><%= t(".name") %></th>
        <th scope="col"><%= t("views.organization.show.year") %></th>
        <th scope="col"><%= t(".action") %></th>
        </tr>
    </thead>
    <tbody>
        <% @seasons.each do |season| %>
            <tr>
                <th scope="row"><%= season.id %></th>
                <td><%= season.name %></td>
                <td><%= season.season_year %></td>
                <td>
                    <%= link_to 'Show Season', organization_season_path(organization_id: @organization.id, id: season.id), class: 'btn btn-sm btn-primary' %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
<%= link_to 'Back', organization_index_path(current_organization),  class: 'btn btn-sm btn-primary' %>

           