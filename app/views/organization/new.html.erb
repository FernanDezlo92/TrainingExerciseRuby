<h1><%= t(".new_organization") %></h1>

<%= form_for @organization, url: "/organization" do |f| %>
    <div class="form-group">
        <%= f.label :name, t(".name") %>
        <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :logo, t(".logo") %>
        <%= f.file_field :logo, class: 'form-control' %>
    </div>

    <div class="actions">
        <%= f.submit%>
    </div>
<% end %>
</br>
<%= link_to t(".back"), organization_index_path, class: 'btn btn-sm btn-primary' %>